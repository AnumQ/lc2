  </tr>

<% @products.each do |product| %>
  <tr class="<%=cycle('list_line_odd','list_line_even')%>">
    <td ds\class="list_description">
		<dl>
			<dt><strong><%=product.title%></strong></dt>
			<dt><%=truncate(strip_tags(product.description),
			:length=>80)%></dt>
		</dl>
	</td>
    <td><%= image_tag(product.image_url,:class=> 'list_image', :size => "50x50") %></td>
    <td><span class="price"><%=sprintf("Â£%0.02f",product.price)%></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

